<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginAlertView"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/radiusAlertView"
        app:cardElevation="@dimen/cardElevationAlertView"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/paddingContentAlertView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/dialogImgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp" />

            <TextView
                android:id="@+id/dialogMessageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/dialogImgv"
                android:lineSpacingExtra="@dimen/lineSpacingAlertView"
                android:lineSpacingMultiplier="1"
                android:paddingEnd="0dp"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:textColor="#444"
                android:textSize="@dimen/textSize" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>